{
    "manifest_version": 2,

    "name": "umbraco-devtool",
    "description": "umbraco-devtool",
    "version": "1.0",

    "icons": {
        "128": "img/icon.png"
    },

    "browser_action": {
        "default_icon": "img/icon.png"
    },

    "content_scripts": [{
        "matches": ["<all_urls>","*://toms-energetic-sheep.s1.umbraco.io/*"],
        "js":[
                "/dist/js/content.js",
                "/dist/js/inject.js"
             ],
        "css":[

        ],
        "run_at": "document_start"
    }],

    "background": {
        "scripts": [
            "/dist/js/background.js"
        ]
    },

    "permissions": [
        "activeTab",
        "storage",
        "unlimitedStorage",
        "webRequest",
        "http://*/*",
        "https://*/*",
        "debugger"
    ],

    "web_accessible_resources": ["/dist/js/inject.js"]
}